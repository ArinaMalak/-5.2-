<Window x:Class="LoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="400" Width="600">
    <Grid Background="#ffffff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>


        <Image Grid.Column="0" Source="galaxy.jpg" Stretch="Fill"/>
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Логин" Margin="0,0,0,5"/>
            <TextBox Height="40" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox Height="40" Margin="0,0,0,10"/>

            <CheckBox Content="Я согласен с условиями ресурса" Margin="0,0,0,10" Background="#FF9C27B0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="РЕГИСТРАЦИЯ" Height="40" Width="120" Margin="0,0,10,0"/>
                <Button Content="ВОЙТИ" Height="40" Width="120" Background="#FF9C27B0" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>